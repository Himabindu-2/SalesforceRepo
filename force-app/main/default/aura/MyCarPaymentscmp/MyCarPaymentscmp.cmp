<aura:component implements="flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" access="global" >

<aura:attribute name="PayId" type="string"></aura:attribute>

    <aura:attribute name="SuccessMsgs" type="boolean" default="false"></aura:attribute>

    
    <aura:if isTrue="{!v.SuccessMsgs}">

        

            <aura:set attribute="else">

            <div class="slds-p-around_small">

                <lightning:recordEditForm objectApiName="Payment__c" onsuccess="{!c.handlesSuccess}">

                    
                        <lightning:inputField fieldName="Contact_Id__c"  variant="label-stacked" ></lightning:inputField>

                        <lightning:inputField fieldName="Booking_Id__c"  variant="label-stacked" ></lightning:inputField>

                        <lightning:inputField fieldName="Car_Id__c"  variant="label-stacked" ></lightning:inputField>

                        <lightning:inputField fieldName="Amount__c"  variant="label-stacked" ></lightning:inputField>
                    
                       
       <!--                 <lightning:inputField fieldName="Pay__c"  variant="label-stacked" ></lightning:inputField>  -->
                    
                        

                       <lightning:button type="submit" name="update" label="Finish" variant="brand" class="slds-m-top__small"></lightning:button>

                    </lightning:recordEditForm> 

                </div>

            </aura:set>

        </aura:if>
</aura:component>